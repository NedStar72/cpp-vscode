{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make bin",
            "type": "shell",
            "command": "New-Item",
            "args": [
                "-ItemType",
                "Directory",
                "-Force",
                "-Path",
                "${workspaceFolder}\\bin"
            ],
            "problemMatcher": []
        },
        {
            "label": "build files in current dir",
            "type": "process",
            "command": "g++",
            "args": [
                "-g",
                "*.cpp",
                "-o",
                "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "make bin"
            ],
        }
    ]
}
